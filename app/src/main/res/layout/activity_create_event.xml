<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="de.inces.nearcon.MainActivity"
    >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">


        <TextView
            android:id="@+id/textviewtest"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="testtextview"
            android:textAlignment="center"/>

        <Spinner
            android:id="@+id/spinner_category"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content" />


        <ListView
            android:id="@+id/list_icon"
            android:layout_width="fill_parent"
            android:layout_height="100dp" />

        <EditText
            android:id="@+id/edit_description"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Please insert an event description"/>

        <SeekBar
            android:id="@+id/seek_visibilityTime"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:max="4"/>

        <TextView
            android:id="@+id/txt_visibilityTime"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="testtextview"
            android:textAlignment="center"/>

        <SeekBar
            android:id="@+id/seek_visibilityRadius"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:max="3" />

        <TextView
            android:id="@+id/txt_visibilityRadius"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="testtextview"
            android:textAlignment="center"/>

        <Button
            android:id="@+id/btn_submit"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="SUBMIT EVENT"/>

    </LinearLayout>
</ScrollView>
